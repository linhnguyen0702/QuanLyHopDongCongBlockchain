# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRE=7d

# Hyperledger Fabric Configuration
FABRIC_CA_CLIENT_HOME=./network/crypto-config
FABRIC_CA_CLIENT_MSPDIR=msp
FABRIC_CA_CLIENT_TLS_CERTFILES=./network/crypto-config/peerOrganizations/org1.example.com/ca/ca.org1.example.com-cert.pem

# Network Configuration
CHANNEL_NAME=mychannel
CHAINCODE_NAME=contract-chaincode
PEER_ENDPOINT=localhost:7051
ORDERER_ENDPOINT=localhost:7050

# Database (if using additional database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=contract_management
DB_USER=postgres
DB_PASSWORD=password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
